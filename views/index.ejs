<div class="author">
  <h1 class="author__heading">Hello, Glad to Have You Here!</h1>
  <p class="author__body"> Let's Explore, Learn, and Grow Together</p>
</div>

<img src="https://upload.wikimedia.org/wikipedia/commons/a/a0/DetroitSkyline.jpg" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="articles">
  <h2 class="articles__heading">New Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>


  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
 

  



</section>